
@{
    Layout = "_Layout";
    ViewData["Title"] = "View Medicine";
}

<h1 class="h1 text-center">View Medicines</h1>
<hr />

<div class="container">
    <h3 class="display-4 text-center h3">All Medicines</h3>
    <hr />
    <div class="row">
        @foreach (var item in ViewBag.medicines)
        {

            <div class="card mb-4 shadow-sm col-md-4">
                <img src="/images/@item.MedicineName .jpg" class="card-img-top" alt="image" style="width:100%;height:15vw;object-fit:cover;">
                <div class="card-body">
                    <h3 class="card-title"> @item.MedicineName</h3>
                    <p class="card-text">Category : @item.Category</p>
                    <p class="card-text">Description : @item.Description</p>
                    <p class="card-text">Price : @item.Price Rs.</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">

                            <a asp-controller="cart" asp-action="buy" asp-route-id="@item.Id" class="btn btn-success"> Buy Now</a>
                        </div>

                    </div>
                </div>
            </div>
        }

    </div>
