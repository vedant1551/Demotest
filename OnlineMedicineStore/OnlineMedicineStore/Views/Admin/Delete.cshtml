@model OnlineMedicineStore.Data.Medicine
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Delete Medicine";
}

<h3  class="h3 text-center">Are You Sure to Delete @Model.MedicineName ?</h3>
<hr />
<div class="container offset-4">
    <div>
        
        <div class="card mb-4 shadow-sm col-md-6">
            <img src="/images/@Model.MedicineName .jpg" class="card-img-top" alt="image" style="width:100%;height:15vw;object-fit:cover;">
            <dl class="row">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.MedicineName)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.MedicineName)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Category)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Price)
                </dd>
            </dl>
        </div>
        

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a asp-action="ViewMedicine" class="btn btn-outline-primary">Back to List</a>
        </form>
    </div>

</div>
    