@model OnlineMedicineStore.Models.ForgotPasswordModel

@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="container">
    <h1>Forgot Password</h1>

    <hr />
    <div class="row">
        <div class="col-md-4 offset-4">
            @if (Model?.EmailSent == true)
            {
                <div class="alert alert-success" role="alert">
                    <p> If you are registered with us,
                        We have sent an E-mail on your Registered Email ID.
                    </p>
                </div>
            }
            else
            {
                <p>Forgot Password? No worries..You can set it easily.</p>
                <form asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                   
                    <div class="form-group">
                        <input type="submit" value="Continue" class="btn btn-primary btn-block" />
                    </div>
                </form>
            }

        </div>
    </div>

    <div class="offset-4 col-md-4 text-center">
        <p>Back To <a asp-action="Login" asp-controller="Account" class="text-center">Login</a></p>
    </div>
</div>


